<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_select"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:padding="10dip" >

    <TextView
        android:id="@+id/postshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:singleLine="true"
        android:textColor="@drawable/list_textselector"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/posthint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/post_next"
        android:layout_toRightOf="@+id/postshow"
        android:gravity="right|center_vertical"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:textColor="@drawable/list_titleselector"
        android:textSize="18dip" />

    <ImageView
        android:id="@id/post_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow" >
    </ImageView>

</RelativeLayout>