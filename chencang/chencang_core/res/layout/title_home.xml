<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height" 
    android:background="@drawable/chencang_header_bg">

    <LinearLayout
        android:id="@+id/logo_root"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_label_city_cat"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="上海 - 二手手机"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/title_action_indicator"
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/chencang_arrow_down" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingRight="22dp"
        android:paddingLeft="11dp"
        android:id="@+id/setting"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chencang_setting" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingRight="11dp"
        android:paddingLeft="10dp"
        android:id="@+id/filter"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/setting"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chencang_filter" />
    </LinearLayout>
    
</RelativeLayout>