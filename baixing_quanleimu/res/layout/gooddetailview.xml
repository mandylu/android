<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gooddetaillayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg" >
    
    <LinearLayout
        android:id="@+id/phonelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/viewad_bar"
        android:gravity="center_vertical" >
        
        <RelativeLayout
            android:id="@+id/phone_parent"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >


            <com.quanleimu.widget.ContextMenuItem
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:src="@android:color/transparent" />

            <ImageView
                android:id="@+id/call_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_call" />
                       
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/call_img"
                android:text="12345678909"
                android:textColor="#FFFFFF"
                android:textSize="25dip" >
            </TextView>
            
           
          
          
         <TextView
            android:id="@+id/buzz_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            android:text="私信"
            android:textSize="15sp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            />
                    
          <ImageView
            android:id="@+id/buzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/buzz_txt"
             android:paddingLeft="10dip"
            android:src="@drawable/btn_viewad_buzz" />
          


          
        </RelativeLayout>



    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:id="@+id/svDetail"
        android:layout_above="@+id/phonelayout"
         />

</RelativeLayout>