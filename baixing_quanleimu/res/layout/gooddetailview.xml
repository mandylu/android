<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gooddetaillayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home" >
        
        <com.quanleimu.widget.PullableScrollView
            android:id="@+id/svDetail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/phonelayout"
            android:background="@drawable/home_bg">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:paddingTop="10dip"
				    android:paddingBottom="15dip"
				    android:gravity="center"
				    android:id="@+id/pull_to_prev_header">
				    
				    <ImageView
				        android:id="@+id/pull_to_prev_image"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="30dip"
				        android:layout_marginRight="20dip"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:src="@drawable/ic_pulltorefresh_arrow"/>
				    
				    <TextView
				        android:id="@+id/pull_to_prev_text"
				        android:text="上一条："
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:textStyle="bold"
				        android:paddingTop="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@+id/pull_to_prev_image"/>
				</RelativeLayout>

 
                <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
				    
	                <RelativeLayout
	                    android:id="@+id/llgl"
	                    android:layout_width="fill_parent"
	                    android:layout_height="fill_parent"
	                    android:background="@drawable/viewad_pic_bg" >
	
	                    <Gallery
	                        android:id="@+id/glDetail"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_centerInParent="true" >
	                    </Gallery>
	                </RelativeLayout>
	                
	                <LinearLayout
	                    android:id="@+id/meta"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="10dip"
	                    android:background="@drawable/viewad_bg_meta"
	                    android:paddingBottom="8dip"
	                    android:paddingTop="13dip"> 
	                </LinearLayout>
	                
	                <TextView
	                    android:layout_width="fill_parent"
	                    android:layout_marginTop="10dip"
	                    android:background="@drawable/list_divider"
	                    android:layout_height="1dip">
	                </TextView>
	
	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dip"
	                    android:gravity="top"
	                    android:orientation="horizontal" >   
		                <ImageView
		                    android:id="@+id/leading"
						    android:layout_width="wrap_content"
						    android:layout_height="fill_parent"
						    android:src="@drawable/pic_leading" >
		                </ImageView>                 
		                <TextView
		                    android:id="@+id/goods_tittle"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:paddingLeft="10dip"
		                    android:gravity="top"
		                    android:textColor="#000000"
		                    android:textStyle="bold"
		                    android:textSize="20dip" />
	                </LinearLayout>
	
	                <TextView
	                    android:id="@+id/sendmess1"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:lineSpacingExtra="2dip"
	                    android:padding="12dip"
	                    android:textColor="#000000"
	                    android:textSize="15dip">                    
	                </TextView>
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="12dip"
	                    android:layout_marginRight="10dip"
	                    android:gravity="center_vertical"                    
	                    android:paddingTop="10dip"
	                    android:paddingBottom="10dip" >
	
	                    <LinearLayout
	                        android:id="@+id/showmap"
	                        android:layout_width="wrap_content"
	                        android:gravity="center_vertical"
	                        android:clickable="true"
							android:paddingLeft="5dip"
							android:paddingRight="5dip" 
							android:background="@drawable/btn_bg"                       
	                        android:layout_height="wrap_content">
		                    <ImageView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:background="@drawable/icon_map" />
		
		                    <TextView	                        
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="1dip"
		                        android:text="具体地点"
		                        android:textSize="16dip"
		                        android:textColor="@drawable/list_textselector" />
		
	                	</LinearLayout>
	                	
						<LinearLayout
	                        android:id="@+id/fenxianglayout"
	                        android:layout_width="wrap_content"
	                        android:paddingLeft="5dip"
	                        android:paddingRight="5dip"
	                        android:clickable="true"
	                        android:layout_marginLeft="10dip"
	                        android:gravity="center_vertical"
	                        android:background="@drawable/btn_bg"
	                        android:layout_height="wrap_content">
		                    <ImageView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:background="@drawable/icon_share" />
		
		                    <TextView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="1dip"
		                        android:text="分享"
		                        android:textSize="16dip"
		                        android:textColor="@drawable/list_textselector" />
	                	</LinearLayout>
	                	
						<LinearLayout
	                        android:id="@+id/jubaolayout"
	                        android:layout_width="wrap_content"
	                        android:paddingLeft="5dip"
	                        android:clickable="true"
	                        android:paddingRight="5dip"
	                        android:layout_marginLeft="20dip"
	                        android:gravity="center_vertical"
	                        android:layout_height="wrap_content">
		                    <ImageView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_gravity="center_vertical"
		                        android:background="@drawable/icon_flag" />
		
		                    <TextView
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="1dip"
		                        android:text="举报"
		                        android:textSize="16dip"
		                        android:textColor="@drawable/list_textselector" />
	                	</LinearLayout>
											
	               	</LinearLayout>
	            </LinearLayout>  	
               	
                <RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:paddingTop="10dip"
				    android:paddingBottom="15dip"
				    android:gravity="center"
				    android:id="@+id/pull_to_next_footer">
				    
				    <ImageView
				        android:id="@+id/pull_to_next_image"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="30dip"
				        android:layout_marginRight="20dip"
				        android:layout_gravity="center"
				        android:gravity="center"
				        android:src="@drawable/ic_pulltorefresh_arrow_upsidedown"/>
				    
				    <TextView
				        android:id="@+id/pull_to_next_text"
				        android:text="下一条："
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:textStyle="bold"
				        android:paddingTop="5dip"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:layout_toRightOf="@+id/pull_to_next_image"/>
				</RelativeLayout>
            </LinearLayout>
        </com.quanleimu.widget.PullableScrollView>
    
	    <LinearLayout
			android:id="@+id/phonelayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:gravity="center_vertical"
			android:background="@drawable/viewad_bar">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:paddingLeft="20dip"
                android:textSize="30dip"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content">
            </TextView>            
            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"                
                android:src="@drawable/icon_call">
            </ImageView>
            <ImageView
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:src="@drawable/icon_sms">
            </ImageView>
	    </LinearLayout>          

</RelativeLayout>