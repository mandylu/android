<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dip"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="15dip" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_text"
        android:layout_alignLeft="@+id/rl_text"
        android:layout_alignRight="@+id/rl_text"
        android:layout_alignTop="@+id/rl_text"
        android:background="@drawable/white_bk" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="13dip"
        android:paddingTop="15dip" >

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="用户名"
            android:textColor="#82807C"
            android:textSize="22dip" >
        </TextView>

        <EditText
            android:id="@+id/et_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_account"
            android:layout_toRightOf="@id/tv_account"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="手机号/昵称"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:singleLine="true"
            android:textSize="22dip" >
        </EditText>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@id/tv_account"
            android:layout_marginTop="8dip"
            android:background="#CFCFCA" >
        </TextView>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_account"
            android:layout_below="@id/tv_account"
            android:layout_marginTop="18dip"
            android:gravity="center_vertical"
            android:text="密码"
            android:textColor="#82807C"
            android:textSize="22dip" >
        </TextView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_password"
            android:layout_alignTop="@id/tv_password"
            android:layout_toRightOf="@id/tv_password"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_forget"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="必填"
                android:inputType="textPassword"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:textSize="22dip" >
            </EditText>

            <ImageButton
                android:id="@+id/iv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:background="@drawable/btn_forget_style"
                android:padding="5dip" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl_text"
        android:layout_alignRight="@id/rl_text"
        android:layout_below="@id/rl_text"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/btn_register"
            android:clickable="true" >
        </ImageView>

        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="5"
            android:background="@drawable/btn_login"
            android:clickable="true" >
        </ImageView>
    </LinearLayout>

</RelativeLayout>