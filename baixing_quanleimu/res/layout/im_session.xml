<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    android:orientation="vertical" >

    <include layout="@layout/item_loading"
        android:id="@+id/tip_loading_message"/>
    
    <ListView
        android:scrollingCache="false"
        android:id="@+id/char_history_p"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:divider="@android:color/transparent"
        android:dividerHeight="0px"
        android:listSelector="#00000000"
        android:layout_weight="1.0">

        <!--LinearLayout
            android:id="@+id/im_content_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
        </LinearLayout-->
    </ListView>

    <RelativeLayout
        android:id="@+id/im_input_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bg_input" >

        <EditText
            android:id="@+id/im_input_box"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
	        android:drawablePadding="6dp"
	        android:singleLine="true"
	        android:gravity="center_vertical|left"
	        android:textSize="@dimen/font_input_text"
	        android:textColor="@color/common_edit_text_color"
	        android:background="@drawable/edit_bg"
            android:layout_toLeftOf="@+id/im_send_btn"
            android:hint="最多可输入140个字"
            android:maxLength="140" >
        </EditText>

        <Button
            android:id="@+id/im_send_btn"
            android:layout_width="58dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"            
            android:layout_marginRight="6dp"
            android:background="@drawable/btn_send"
            android:scaleType="fitCenter"
            android:text="发送"
            android:textSize="16sp"
            android:textColor="@color/white"
    	 />

    </RelativeLayout>

</LinearLayout>