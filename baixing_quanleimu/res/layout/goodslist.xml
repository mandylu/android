<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:padding="5dip" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="类目名称"
            android:textColor="#ffffff"
            android:textSize="22dip" >
        </TextView>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_jj"
            android:paddingLeft="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingRight="12dip"
            android:layout_centerVertical="true"
            android:text="首页" 
            android:textColor="#ffffff">
        </Button>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvTitle"
            android:background="@drawable/btn_search"
            android:padding="5dip"
            android:layout_centerVertical="true"
            android:text="筛选"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearBottom"
        android:layout_below="@+id/rlTitle"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="5dip" >

        <ListView
            android:listSelector="#00000000"
            android:scrollingCache="false"
            android:id="@+id/lvGoodsList"
            android:layout_width="fill_parent"
            android:fastScrollEnabled="true"
            android:scrollbars="none"
            android:focusable="true" 
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom" >

            <ImageView
                android:id="@+id/ivHomePage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_homepage_xml" />

            <ImageView
                android:id="@+id/ivCateMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_catemain_xml" />

            <ImageView
                android:id="@+id/ivPostGoods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_postgoods_xml" />

            <ImageView
                android:id="@+id/ivMyCenter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_mycenter_xml" />

            <ImageView
                android:id="@+id/ivSetMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_setmain_xml" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>