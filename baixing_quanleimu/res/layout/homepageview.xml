<?xml version="1.0" encoding="utf-8"?>
   
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.quanleimu.activity">
    			
    	<ScrollView 
    	 	android:id="@+id/scrHomepageScroll"
    	 	android:layout_width="fill_parent"
    	 	android:layout_height="fill_parent">   	
    	 	    
			    <LinearLayout
			        android:id="@+id/llgl"
			        android:paddingLeft="3dip"
			        android:paddingRight="3dip"
			        android:paddingTop="5dip"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="center_horizontal"
			        android:orientation="vertical" >
			        
			        <TextView
			            android:id="@+id/tvInfo"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:background="@drawable/s_bg2_h"
			            android:gravity="center"
			            android:text="网络连接失败"
			            android:textColor="#595959"
			            android:textSize="18dip" >
			        </TextView>
			        
			        <FrameLayout 
						android:orientation="vertical" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">					
					
						<com.quanleimu.widget.ViewFlow
							android:id="@+id/glDetail" 
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							app:sidebuffer="3"/>	
							
						<com.quanleimu.widget.CircleFlowIndicator 
							android:padding="5dip"
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:id="@+id/viewflowindic"
							android:layout_gravity="center_horizontal"
							app:radius="5dip"
							app:activeColor="#dddddd"
							app:inactiveColor="#dddddd"/>							    
					</FrameLayout>
					        
			        <LinearLayout
				        android:id="@+id/linearUseualCates"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical"
				        android:padding="5dip" >
			    	</LinearLayout>
			    </LinearLayout>
		</ScrollView>
</LinearLayout>