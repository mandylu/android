<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/llLoginRoot"
    android:orientation="vertical" 
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

            <LinearLayout
                android:id="@+id/layout_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_top_bg"
                android:orientation="horizontal" 
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="手机号/昵称："
                    android:textSize="16dip"
                    android:textColor="#000000" />

                <requestFocus />

                <EditText
                    android:id="@+id/accountEt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:padding="5dip" >
                     <!--android:inputType="number"-->
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_down_bg"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="密\t\t码："
                    android:textSize="16dip"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/passwordEt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:padding="5dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forget_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_s_bg"
                android:gravity="center"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="忘记密码"
                    android:textSize="16dip"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_s_bg"
                android:gravity="center"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="注册"
                    android:textSize="16dip"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow" />
            </LinearLayout>

</LinearLayout>