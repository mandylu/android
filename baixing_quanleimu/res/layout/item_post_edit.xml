<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postinputlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dip"
    android:background="@drawable/post_box"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/postshow"
        android:layout_width="72dip"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dip"
        android:textColor="#838383"
        android:textSize="@dimen/font_medium" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/postinput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/postunit"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:hint="请输入"
            android:inputType="textMultiLine"
            android:paddingRight="5dip"
            android:singleLine="false"
            android:textColor="@drawable/list_titleselector"
            android:textColorHint="#d1d0ca"
            android:textSize="@dimen/font_medium" >
        </EditText>

        <TextView
            android:id="@+id/postunit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:textColor="#82807C"
            android:textSize="@dimen/font_medium" />
    </RelativeLayout>

</LinearLayout>