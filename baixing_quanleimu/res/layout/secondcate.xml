<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_header"
            android:gravity="center_vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="选择类目"
                android:textColor="#ffffff"
                android:textSize="22dip" >
            </TextView>

            <Button
                android:gravity="right"
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_jj"
                 android:paddingLeft="15dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:text="" 
                android:textColor="#ffffff" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearBottom"
        android:layout_below="@+id/linearTop"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="10dip" >

        <ListView
            android:id="@+id/lvSecondCates"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:scrollingCache="false" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/ivHomePage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/iv_homepage_xml" />

        <ImageView
            android:id="@+id/ivCateMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/iv_catemain_xml" />

        <ImageView
            android:id="@+id/ivPostGoods"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/iv_postgoods_xml" />

        <ImageView
            android:id="@+id/ivMyCenter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/iv_mycenter_xml" />

        <ImageView
            android:id="@+id/ivSetMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@drawable/iv_setmain_xml" />
    </LinearLayout>

</RelativeLayout>