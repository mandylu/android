<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 	
	android:layout_height="fill_parent"
	android:id="@+id/llParentView" >
	
	<LinearLayout 	    
	    android:layout_width="fill_parent" 
	 	android:id="@+id/linearList" 
	 	android:layout_height="fill_parent"
	 	android:orientation="vertical">
	
	 	<LinearLayout
	 	    android:id="@+id/linearGpsCity"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:padding="10dip" >
	
	 		<TextView 
	 			android:text="GPS定位城市" 
	 			android:textSize="20dip"
	 			android:id="@+id/textView1" 
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"> 		    
	 		</TextView>
		</LinearLayout>
	
		<RelativeLayout
		    android:id="@+id/linearGpsCityItem"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
		    android:background="@drawable/btn_s_bg"
		    android:padding="10dip" >
	
	 		<TextView 
	 		    android:layout_centerVertical="true"
	 			android:text="上海" 
	 			android:textSize="18dip"
	 			android:textColor="#000000"
	 			android:id="@+id/tvGPSCityName" 
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"></TextView>
	
	 		<ImageView
	 		    android:id="@+id/ivGPSChoose"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_alignParentRight="true"
	 		    android:layout_centerVertical="true"
	 		    android:src="@drawable/gou" />
		</RelativeLayout>
		
		<LinearLayout 
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linearGpsCity" 
		 	android:layout_height="wrap_content" android:padding="10dip">
	 		<TextView 
	 			android:text="热门城市" 
	 			android:textSize="20dip"
	 			android:id="@+id/textView1" 
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		
		<LinearLayout 
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linearHotCities" 
		 	android:layout_height="wrap_content" 
		 	android:padding="10dip"
		 	android:orientation="vertical">
	 		
		</LinearLayout>
		
		<LinearLayout 
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linear" 
		 	android:layout_height="wrap_content" 
		 	android:padding="10dip">
	 		<TextView 
	 			android:text="其他城市" 
	 			android:textSize="20dip"
	 			android:id="@+id/textView1" 
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		
		<RelativeLayout 
		    android:background="@drawable/btn_s_bg"
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linear2Other" 
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="10dip"
		    android:layout_marginRight="10dip"
		 	android:padding="10dip">
	 		<TextView 
	 		    android:layout_centerVertical="true"
	 			android:text="选择其他城市" 
	 			android:textSize="18dip"
	 			android:textColor="#000000"
	 			android:id="@+id/tv2OtherCity" 
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"></TextView>
	 		<ImageView 
	 		    android:layout_centerVertical="true"
	 			android:layout_width="wrap_content" 
	 			android:id="@+id/ivChoose" 
	 			android:layout_height="wrap_content" 
	 			android:src="@drawable/arrow" 
	 			android:layout_alignParentRight="true"/>
		</RelativeLayout>
		
	</LinearLayout>
</ScrollView >
