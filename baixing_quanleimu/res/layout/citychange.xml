<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 	
	android:layout_height="fill_parent"
	android:paddingBottom="5dip"
	android:id="@+id/llParentView" >
	
	<LinearLayout 	    
	    android:layout_width="fill_parent" 
	 	android:id="@+id/linearList" 
	 	android:layout_height="wrap_content"
	 	android:orientation="vertical">
	
	 	<LinearLayout
	 	    android:id="@+id/linearGpsCity"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:paddingTop="10dip"
	 	    android:paddingRight="10dip"
	 	    android:paddingLeft="10dip" 
	 	    android:paddingBottom="5dip">
	
	 		<TextView 
	 			android:text="GPS定位城市" 
	 			android:textSize="18dip"
	 			android:textStyle="bold"
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"> 		    
	 		</TextView>
		</LinearLayout>
	
	 	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">	 	    
			<RelativeLayout
			    android:id="@+id/linearGpsCityItem"
				android:clickable="true"
				android:background="@drawable/list_selector"						    			    
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dip"
			    android:layout_marginRight="10dip"
			    android:paddingTop="5dip"
			    android:paddingBottom="5dip">
		
		 		<TextView 
		 		    android:layout_centerVertical="true"
		 			android:text="上海" 
		 			android:paddingLeft="10dip"
		 			android:textSize="18dip"
		 			android:textColor="#000000"
		 			android:id="@+id/tvGPSCityName" 
		 			android:layout_width="wrap_content" 
		 			android:layout_height="wrap_content">		 		    
		 		</TextView>
		
		 		<ImageView
		 		    android:id="@+id/ivGPSChoose"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_alignParentRight="true"
		 		    android:layout_centerVertical="true"
		 		    android:src="@drawable/gou" />
	 		</RelativeLayout>
	 		<ImageView
			    android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
			    
				android:layout_alignTop="@id/linearGpsCityItem"
				android:layout_alignLeft="@id/linearGpsCityItem"
				android:layout_alignRight="@id/linearGpsCityItem"
				android:background="@drawable/s_bg2"
				android:layout_alignBottom="@id/linearGpsCityItem">
			</ImageView>
		</RelativeLayout>
		
		<LinearLayout 
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linearHotCitiesTitle" 
		 	android:layout_height="wrap_content" 
	 	    android:paddingTop="10dip"
	 	    android:paddingRight="10dip"
	 	    android:paddingLeft="10dip" 
	 	    android:paddingBottom="5dip">
	 		
	 		<TextView 
	 			android:text="热门城市" 
	 			android:textStyle="bold"
	 			android:textSize="18dip"
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content">
	 		</TextView>
		</LinearLayout>
		
		<RelativeLayout
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    
			<LinearLayout 
			    android:layout_width="fill_parent" 
			 	android:id="@+id/linearHotCities" 
			 	android:layout_height="wrap_content" 
			 	android:layout_marginLeft="10dip"
			 	android:layout_marginRight="10dip"
			 	android:orientation="vertical">
			</LinearLayout>
			<ImageView
			    android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
			    
				android:layout_alignTop="@id/linearHotCities"
				android:layout_alignLeft="@id/linearHotCities"
				android:layout_alignRight="@id/linearHotCities"
				android:background="@drawable/s_bg2"
				android:layout_alignBottom="@id/linearHotCities">
			</ImageView>
		</RelativeLayout>
		
		<LinearLayout 
		    android:layout_width="fill_parent" 
		 	android:id="@+id/linear" 
		 	android:layout_height="wrap_content" 
	 	    android:paddingTop="10dip"
	 	    android:paddingRight="10dip"
	 	    android:paddingLeft="10dip" 
	 	    android:paddingBottom="5dip">
	 		<TextView 
	 			android:text="其他城市" 
	 			android:textSize="18dip"
	 			android:textStyle="bold"
	 			android:textColor="#000000"
	 			android:layout_width="wrap_content" 
	 			android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		    		    
			<RelativeLayout 
			    android:layout_width="fill_parent" 
				android:clickable="true"
				android:background="@drawable/list_selector"						    			    			    
			 	android:id="@+id/linear2Other" 
			 	android:layout_height="wrap_content" 
			    android:layout_marginLeft="10dip"
			    android:layout_marginRight="10dip"
			    android:paddingBottom="5dip">
		 		<TextView 
		 		    android:layout_centerVertical="true"
		 			android:text="选择其他城市" 
		 			android:textSize="18dip"
		 			android:textColor="#000000"
		 			android:id="@+id/tv2OtherCity" 
				    android:paddingTop="5dip"
				    android:paddingBottom="5dip"
				    android:paddingLeft="10dip"		 			
		 			android:layout_width="wrap_content" 
		 			android:layout_height="wrap_content">		 		    
		 		</TextView>
		 		<ImageView 
		 		    android:layout_centerVertical="true"
		 			android:layout_width="wrap_content" 
		 			android:id="@+id/ivChoose" 
		 			android:layout_height="wrap_content" 
		 			android:src="@drawable/arrow"
		 			android:paddingRight="5dip" 
		 			android:layout_alignParentRight="true"/>
			</RelativeLayout>
			<ImageView
			    android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
			    
				android:layout_alignTop="@id/linear2Other"
				android:layout_alignLeft="@id/linear2Other"
				android:layout_alignRight="@id/linear2Other"
				android:background="@drawable/s_bg2"
				android:layout_alignBottom="@id/linear2Other">
			</ImageView>			
		</RelativeLayout>
	</LinearLayout>
</ScrollView >
