<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home" >

    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header"
            android:padding="5dip" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="详细信息"
                android:textColor="#ffffff"
                android:textSize="20dip" >
            </TextView>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_changecity_xml"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:text=""
                android:textColor="#ffffff" >
            </Button>

            <Button
                android:id="@+id/btnStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_search"
                android:padding="5dip"
                android:text=""
                android:textColor="#ffffff" >
            </Button>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/svDetail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/linearBottom"
            android:layout_below="@+id/rlTitle"
            android:background="@drawable/bg">

            <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/llgl"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bg_viewad_top">

                    <Gallery
                        android:id="@+id/glDetail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" >
                    </Gallery>
                </RelativeLayout>

                <TextView
                    android:id="@+id/goods_tittle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dip"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="17dip" 
                    android:padding="10dip"/>

                <LinearLayout
                    android:id="@+id/meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dip">
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/message1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:padding="5dip">

                    <TextView
                        android:id="@+id/sendmess1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dip" 
                        android:textColor="#000000"
                        android:lineSpacingExtra="2dip" 
                     	android:padding="5dip"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/message2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/message1"
                    android:layout_marginTop="10dip" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/showphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/btn_s_bg2"
                    android:padding="10dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android="@+id/imphone1"
                        android:background="@drawable/phone" />

                    <TextView
                        android:id="@+id/address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="25dip"
                        android:textColor="#000000"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow" />
                </RelativeLayout>
				
                <RelativeLayout
                    android:id="@+id/showmap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/showphone"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/btn_s_bg2"
                    android:padding="10dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android="@+id/imphone"
                        android:background="@drawable/map" />

                    <TextView
                        android:id="@+id/address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true" 
                        android:textColor="#000000"
                        android:layout_marginLeft="25dip"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
    <ImageView
        android:id="@+id/ivCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_viewad_close"
        android:visibility="gone" 
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip">
    </ImageView>

</RelativeLayout>