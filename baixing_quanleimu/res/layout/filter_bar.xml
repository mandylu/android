<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height"
   	android:background="@drawable/bg_filter_bar">
    
    <RelativeLayout 
        android:id="@+id/filter_item_single"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <ImageView
                android:id="@+id/arrow_down"
                android:layout_width="8dp"
                android:layout_height="4dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/icon_arrow_down" />

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text="筛选信息"
                android:textColor="@color/font_filter_bar"
                android:textSize="@dimen/tab_font_size" />
        </FrameLayout>

    </RelativeLayout>
  
      <RelativeLayout
          android:id="@+id/filter_item_more"
          android:layout_width="54dp"
          android:layout_height="fill_parent"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
		  >
		  
       <View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>
               	
          <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:textColor="@color/font_filter_bar"
        android:textSize="@dimen/tab_font_size"
        android:text="更多" />
      </RelativeLayout>
    
    <LinearLayout
    android:id="@+id/filter_parent"
    android:layout_toLeftOf="@+id/filter_item_more"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/tab_height"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/filter_item_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

            <include layout="@layout/filter_bar_item"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"/>

    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/filter_item_2"
        android:layout_toRightOf="@+id/filter_item_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
	     
	     <View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>

                        <include layout="@layout/filter_bar_item"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/filter_item_3"
        android:layout_toRightOf="@+id/filter_item_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

     	<View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>
            
                        <include layout="@layout/filter_bar_item"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"/>
        
        
        
    </RelativeLayout>
        
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>