<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height"
   	android:background="@color/tab_bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/filter_item_single"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/tab_font_size"
        android:text="筛选信息" />
    </RelativeLayout>
  
      <RelativeLayout
          android:id="@+id/filter_item_more"
          android:layout_width="54dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
		  >
		  
       <View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>
               	
          <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/tab_font_size"
        android:text="更多" />
      </RelativeLayout>
    
    <LinearLayout
    android:id="@+id/filter_parent"
    android:layout_toLeftOf="@+id/filter_item_more"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/tab_height"
    android:background="@color/tab_bg"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/filter_item_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:layout_toLeftOf="@+id/arrow_down"
            android:singleLine="true"
            android:text="全部"
            android:textColor="#ffffff"
            android:textSize="@dimen/tab_font_size" />

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
			android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_down" />

    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/filter_item_2"
        android:layout_toRightOf="@+id/filter_item_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
	     
	     <View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>

        <TextView
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_down"
            android:singleLine="true"
            android:text="全部"
            android:textColor="#ffffff"
            android:textSize="@dimen/tab_font_size" />
		<ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
			android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_down" />
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/filter_item_3"
        android:layout_toRightOf="@+id/filter_item_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

     	<View
        android:layout_width="@dimen/tab_gap_width"
        android:layout_height="@dimen/tab_gap_height"
        android:layout_centerVertical="true"
        android:background="@color/tab_gap_color"/>
            
        <TextView
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/arrow_down"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="全部"
            android:textColor="#ffffff"
            android:textSize="@dimen/tab_font_size" />
        
                <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
			android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_down" />
        
        
        
    </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>