<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_header"
            android:gravity="center_vertical"
            android:padding="0dip" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="首页"
                android:textColor="#ffffff"
                android:textSize="22dip" >
            </TextView>

            <Button
                android:id="@+id/btnChangeCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_search"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:text="@string/ChangeCity"
                android:textColor="#ffffff" >
            </Button>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_back_xml"
                android:padding="0dip"
                android:text="@string/Search"
                android:textColor="#ffffff" >
            </Button>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearBottom"
        android:layout_below="@+id/linearTop"
        android:background="@drawable/bg" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- android:background="@drawable/bg_viewad_top" -->

            <LinearLayout
                android:id="@+id/llgl"
                android:paddingLeft="3dip"
               android:paddingRight="3dip"
                android:paddingTop="5dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <!--
                     <RelativeLayout
             		    android:id="@+id/relativeLayout1"
             		    android:layout_width="fill_parent"
             		    android:layout_height="wrap_content" >
             		</RelativeLayout>
                -->

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/s_bg2_h"
                    android:gravity="center"
                    android:text="网络连接失败"
                    android:textColor="#595959"
                    android:textSize="18dip" >
                </TextView>

                <Gallery
                    android:id="@+id/glDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </Gallery>
            </LinearLayout>
	
            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用分类"
                    android:textColor="#595959"
                    android:textSize="18dip" >
                </TextView>

                <TextView
                    android:id="@+id/tvSayHi2User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"
                    android:text="Hi,Henrys"
                    android:textColor="#000000"
                    android:textSize="18dip"
                    android:visibility="gone" >
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearUseualCates"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dip" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom" >

            <ImageView
                android:id="@+id/ivHomePage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_homepage_xml" />

            <ImageView
                android:id="@+id/ivCateMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_catemain_xml" />

            <ImageView
                android:id="@+id/ivPostGoods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_postgoods_xml" />

            <ImageView
                android:id="@+id/ivMyCenter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_mycenter_xml" />

            <ImageView
                android:id="@+id/ivSetMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="3"
                android:background="@drawable/iv_setmain_xml" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>