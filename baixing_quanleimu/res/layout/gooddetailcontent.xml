<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
            <RelativeLayout
                android:id="@+id/loading_more_progress_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="15dip"
                android:paddingTop="10dip" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp" />

                <TextView
                    android:id="@+id/loading_goods_tips"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/progressBar1"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dip"
                    android:text="正在加载更多，请耐心等待"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>
            
            
            <RelativeLayout
                android:id="@+id/retry_more_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="15dip"
                android:paddingTop="10dip" >

                <Button
                    android:id="@+id/retry_load_more"
                    android:text="重试"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp" />

                <TextView
                    android:id="@+id/retry_tips"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/retry_load_more"
                    android:paddingTop="5dip"
                    android:text="请求失败，请检查网络然后重试"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                
					<LinearLayout
			            android:id="@+id/ll_appeal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="10dip"
			            android:layout_marginLeft="10dip"
			            android:layout_marginRight="10dip"
			            android:layout_marginTop="15dip"
			            android:background="@drawable/verifyarea"
			            android:orientation="vertical" >
		
			            <TextView
			                android:id="@+id/verifyreason"
			                android:padding="3dip"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:textSize="18dip" >
			            </TextView>
			
			            <Button
			                android:id="@+id/appealbutton"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginTop="10dip"
			                android:text="申诉"
			                android:textSize="16dip" >
			            </Button>
		            </LinearLayout>
		            
		            <ImageView
			            android:id="@+id/verifyseperator"
			            android:layout_marginTop="10dip"
			            android:layout_marginBottom="20dip"
			            android:layout_width="fill_parent"
			            android:layout_height="2dip"
			            android:src="#82C726" />
            

					<RelativeLayout
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content" >
		                
			            <LinearLayout
		                    android:id="@+id/llMainContent"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="vertical" >
		                
		                    <RelativeLayout
		                        android:id="@+id/llgl"
		                        android:layout_width="fill_parent"
		                        android:layout_height="fill_parent"
		                        android:background="@drawable/viewad_pic_bg" >
		
		                        <Gallery
		                            android:id="@+id/glDetail"
		                            android:layout_width="fill_parent"
		                            android:layout_height="wrap_content"
		                            android:layout_centerInParent="true" >
		                        </Gallery>
		                    </RelativeLayout>

		                    <LinearLayout
		                        android:id="@+id/meta"
		                        android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="10dip"
		                        android:layout_marginRight="10dip"
		                        android:background="@drawable/viewad_bg_meta"
		                        android:orientation="vertical"
		                        android:paddingBottom="8dip"
		                        android:paddingTop="13dip" >
		                    </LinearLayout>

		                    <TextView
		                        android:layout_width="fill_parent"
		                        android:layout_height="1dip"
		                        android:layout_marginTop="10dip"
		                        android:background="@drawable/list_divider" >
		                    </TextView>

		                    <LinearLayout
		                        android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:layout_marginTop="10dip"
		                        android:gravity="top"
		                        android:orientation="horizontal" >
		
		                        <ImageView
		                            android:id="@+id/leading"
		                            android:layout_width="wrap_content"
		                            android:layout_height="fill_parent"
		                            android:src="@drawable/pic_leading" >
		                        </ImageView>
		
		                        <TextView
		                            android:id="@+id/goods_tittle"
		                            android:layout_width="fill_parent"
		                            android:layout_height="wrap_content"
		                            android:gravity="top"
		                            android:paddingLeft="10dip"
		                            android:textColor="#000000"
		                            android:textSize="20dip"
		                            android:textStyle="bold" />
		                    </LinearLayout>

		                    <TextView
		                        android:id="@+id/sendmess1"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:lineSpacingExtra="2dip"
		                        android:padding="12dip"
		                        android:textColor="#000000"
		                        android:textSize="15dip" >
		                    </TextView>

		                    <LinearLayout
		                        android:id="@+id/shareandjubao"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="12dip"
		                        android:layout_marginRight="10dip"
		                        android:gravity="center_vertical"
		                        android:paddingBottom="10dip"
		                        android:paddingTop="10dip" >
		
		                        <LinearLayout
		                            android:id="@+id/showmap"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:background="@drawable/btn_bg"
		                            android:clickable="true"
		                            android:gravity="center_vertical"
		                            android:paddingLeft="5dip"
		                            android:paddingRight="5dip" >
		
		                            <ImageView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:background="@drawable/icon_map" />
<!-- 		
		                            <TextView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="1dip"
		                                android:text="具体地点"
		                                android:textColor="@drawable/list_textselector"
		                                android:textSize="16dip" /> -->
		                        </LinearLayout>
		
		                        <LinearLayout
		                            android:id="@+id/fenxianglayout"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_marginLeft="10dip"
		                            android:background="@drawable/btn_bg"
		                            android:clickable="true"
		                            android:gravity="center_vertical"
		                            android:paddingLeft="5dip"
		                            android:visibility="invisible"
		                            android:paddingRight="5dip" >
		
		                            <ImageView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:background="@drawable/icon_share" />
<!-- 		
		                            <TextView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="1dip"
		                                android:text="分享"
		                                android:textColor="@drawable/list_textselector"
		                                android:textSize="16dip" /> -->
		                        </LinearLayout>
		                        
		                        <LinearLayout
		                            android:visibility="invisible"
		                            android:id="@+id/wxlayout"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_marginLeft="10dip"
		                            android:background="@drawable/btn_bg"
		                            android:clickable="true"
		                            android:gravity="center_vertical"
		                            android:paddingLeft="5dip"
		                            android:paddingRight="5dip" >
		
		                            <ImageView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:background="@drawable/micro_messenger" />
		                        </LinearLayout>		                        
		
		                        <LinearLayout
		                            android:id="@+id/jubaolayout"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_marginLeft="20dip"
		                            android:clickable="true"
		                            android:gravity="center_vertical"
		                            android:paddingLeft="5dip"
		                            android:paddingRight="5dip" >
		
		                            <ImageView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_gravity="center_vertical"
		                                android:background="@drawable/icon_flag" />
		
		                            <TextView
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginLeft="1dip"
		                                android:text="举报"
		                                android:textColor="@drawable/list_textselector"
		                                android:textSize="16dip" />
		                        </LinearLayout>
		                    </LinearLayout>
						</LinearLayout>
				
				        <ImageView
		                    android:id="@+id/graymask"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_alignBottom="@+id/llMainContent"
		                    android:layout_alignLeft="@+id/llMainContent"
		                    android:layout_alignRight="@+id/llMainContent"
		                    android:layout_alignTop="@+id/llMainContent"
		                    android:src="#C87D7D7D" />
            	</RelativeLayout>
			</LinearLayout>
</LinearLayout>
</ScrollView>