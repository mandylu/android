<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
            <RelativeLayout
                android:id="@+id/loading_more_progress_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="15dip"
                android:paddingTop="10dip" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp" />

                <TextView
                    android:id="@+id/loading_goods_tips"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/progressBar1"
                    android:layout_centerVertical="true"
                    android:paddingTop="5dip"
                    android:text="正在加载更多，请耐心等待"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>
            
            
            <RelativeLayout
                android:id="@+id/retry_more_parent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingBottom="15dip"
                android:paddingTop="10dip" >

                <Button
                    android:id="@+id/retry_load_more"
                    android:text="重试"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp" />

                <TextView
                    android:id="@+id/retry_tips"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/retry_load_more"
                    android:paddingTop="5dip"
                    android:text="请求失败，请检查网络然后重试"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llDetail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                
					<LinearLayout
			            android:id="@+id/ll_appeal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginBottom="10dip"
			            android:layout_marginLeft="10dip"
			            android:layout_marginRight="10dip"
			            android:layout_marginTop="15dip"
			            android:background="@drawable/verifyarea"
			            android:orientation="vertical" >
		
			            <TextView
			                android:id="@+id/verifyreason"
			                android:padding="3dip"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:textSize="18dip" >
			            </TextView>
			
			            <Button
			                android:id="@+id/appealbutton"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginTop="10dip"
			                android:text="申诉"
			                android:textSize="16dip" >
			            </Button>
		            </LinearLayout>
		            
		            <ImageView
			            android:id="@+id/verifyseperator"
			            android:layout_below="@+id/ll_appeal"
			            android:layout_marginTop="10dip"
			            android:layout_marginBottom="20dip"
			            android:layout_width="fill_parent"
			            android:layout_height="2dip"
			            android:src="#82C726" />
            

					<LinearLayout
		                android:id="@+id/llMainContent"
		                android:layout_below="@+id/verifyseperator"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="vertical" >
		                	
		                	<LinearLayout
		                        android:layout_width="fill_parent"
		                        android:layout_height="48dp"
		                        android:id="@+id/vad_title_parent"
		                        android:layout_marginTop="10dip"
		                        android:gravity="center_vertical"
		                        android:orientation="horizontal" >
		
		                        <ImageView
		                            android:id="@+id/leading"
		                            android:layout_width="wrap_content"
		                            android:layout_height="fill_parent"
		                            android:src="@drawable/pic_leading" >
		                        </ImageView>
		
		                        <TextView
		                            android:id="@+id/goods_tittle"
		                            android:layout_width="fill_parent"
		                            android:layout_height="wrap_content"
		                            android:maxLines="2"
		                            android:gravity="center_vertical"
		                            android:paddingLeft="10dip"
		                            android:textColor="#000000"
		                            android:textSize="20sp"
		                            android:textStyle="bold" />
		                    </LinearLayout>
					    
		                		                    
		                    <RelativeLayout
		                        android:id="@+id/llgl"
		                        android:layout_width="fill_parent"
		                        android:layout_height="fill_parent"
		                        android:paddingTop="8dp"
		                        android:paddingBottom="8dp"
		                        android:paddingLeft="@dimen/list_margin_LF"
		                        android:background="#e7e5d9" >
		
		                        <Gallery
		                            android:id="@+id/glDetail"
		                            android:layout_width="fill_parent"
		                            android:layout_height="wrap_content"
		                            android:layout_centerInParent="true" >
		                        </Gallery>
		                    </RelativeLayout>

		                    <LinearLayout
		                        android:id="@+id/meta"
								android:layout_marginLeft="@dimen/list_margin_LF"
		                		android:layout_marginRight="@dimen/list_margin_LF"
		                        android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
		                        android:orientation="vertical">
		                    </LinearLayout>

		                    <TextView
		                        android:id="@+id/sendmess1"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:lineSpacingExtra="2dip"
		                        android:padding="12dip"
		                        android:textColor="#000000"
		                        android:textSize="15dip" >
		                    </TextView>

		                    <LinearLayout
		                        android:id="@+id/shareandjubao"
		                        android:layout_width="wrap_content"
		                        android:layout_height="wrap_content"
		                        android:layout_marginLeft="12dip"
		                        android:layout_marginRight="10dip"
		                        android:gravity="center_vertical"
		                        android:paddingBottom="10dip"
		                        android:paddingTop="10dip" >
		
		                    </LinearLayout>
            	</LinearLayout>
            	
            	<ImageView
                android:id="@+id/graymask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/llMainContent"
                android:layout_alignLeft="@+id/llMainContent"
                android:layout_alignRight="@+id/llMainContent"
                android:layout_alignTop="@+id/llMainContent"
                android:src="#C87D7D7D"
                android:visibility="visible" />

			</RelativeLayout>
</LinearLayout>
</ScrollView>